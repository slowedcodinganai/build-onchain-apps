    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@react-spring/web": "^9.7.3",
    "net": "^1.0.2",
    "next": "^14.2.10",
    "perfume.js": "9.2.0",
    "permissionless": "^0.1.26",
    "pino-pretty": "^10.3.1",
    "prettier-plugin-solidity": "^1.3.1",
    "react": "^18",
    "react-dom": "^18",
    "react-remove-scroll": "^2.5.7",
    "scroll-into-view-if-needed": "^3.1.0",
